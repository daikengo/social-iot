<h2><%= t(:signup_header) %></h2>
<br />
<table cellpadding=10>
  <tr>
    <td>
<%= form_for @user, :url => account_path do |f| %>
  <%= error_messages_for 'user', :header_message => t(:try_again), :message => t(:account_error) %>
	<input name='userlogin' class='userlogin' />
	<table class="bigtable">

		<tr>
			<td class="left">
				<div class="vcenter"><%= f.label t(:email) %></div>
			</td>
			<td class="right">
				<%= f.text_field :email %>
			</td>
		</tr>
		<tr>
			<td><%= t(:time_zone) %></td>
			<td><%= time_zone_select 'user', 'time_zone', nil, :default => 'Rome' %></td>
		</tr>
      <tr>
        <td class="left">
          <div class="vcenter"><%= f.label :login, t(:userid) %></div>
        </td>
        <td class="right">
          <%= f.text_field :login %>
        </td>
      </tr>
		<tr>
			<td class="left">
				<div class="vcenter"><%= f.label t(:password) %></div>
			</td>
			<td class="right">
				<%= f.password_field :password %>
			</td>
		<tr>
			<td class="left">
				<%= f.label :password_confirmation, raw(t(:password_confirmation_raw)) %>
			</td>
			<td class="right">
				<%= f.password_field :password_confirmation %>
			</td>
		</tr>
      </tr>
		<tr>
			<td class="left"></td>
			<td class="right"><%= f.submit t(:create_account) %><small>By signing up you agree to the <a href="http://platform.social-iot.org/terms">Terms of Use</a></small></td>
		</tr>
	</table>
<% end %>
    </td>

  </tr>
</table>
<script type="text/javascript">
	document.getElementById('user_login').focus();
</script>
